<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvAndroidReview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@color/cardview_shadow_end_color"
        android:padding="30dp"
        card_view:cardCornerRadius="4dp">

        <TextView
            android:id="@+id/tvAndroidTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="TextView"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/tvAndroidInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/purple_200"
            android:padding="5dp"
            android:text="TextView"
            android:textAlignment="center" />


        <ImageView
            android:id="@+id/editAndroid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:srcCompat="@drawable/ic_baseline_edit_24"
            android:layout_gravity="right"/>

        <ImageView
            android:id="@+id/deleteAndroid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:srcCompat="@drawable/ic_baseline_delete_24" />
    </androidx.cardview.widget.CardView>

</LinearLayout>